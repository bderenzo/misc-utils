#!/usr/bin/env bash

usage(){
    echo "Usage: $(basename "${0}") [-n LENGTH] [-u] [-l] [-d] [-s]"
    echo 'Minimal password generator'
    exit "${1}"
}
while [ -n "${1}" ]; do
    case "${1}" in
        -n|--lentgh)   l="${2}"; shift;;
        -u|--upper)    cx="${cx}A-Z";;
        -l|--lower)    cx="${cx}a-z";;
        -d|--digit)    cx="${cx}0-9";;
        -s|--special)  cx="${cx}().,;:!@#$%+*/<>{}~_-";;
        -h|--help)     usage 0;;
        *)             echo "illegal option ${1}"; usage 1;;
    esac
    shift
done

# generate password
</dev/urandom tr -dc "${cx:-A-Za-z0-9}" | head -c${l:-12}; echo;

